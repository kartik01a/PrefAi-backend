{
  "compilerOptions": {
    "target": "ES2020",                          // Modern JS features (Node 18+ safe)
    "module": "CommonJS",                        // Node uses CommonJS for now
    "outDir": "./dist",                          // Compiled output folder
    "moduleResolution": "node",                  // Standard Node resolution
    "esModuleInterop": true,                     // Support default imports from CommonJS
    "allowSyntheticDefaultImports": true,        // Interop with ES imports
    "forceConsistentCasingInFileNames": true,    // Avoid case mismatch bugs
    "strict": true,                              // Enable all strict checks
    "skipLibCheck": true,                        // Skip type checks for .d.ts files
    "resolveJsonModule": true,                   // Import JSON files directly
    "noImplicitAny": true,                       // Force explicit types
    "removeComments": true,                      // Strip comments in prod
    "sourceMap": false,                          // Disable in prod (enable in dev if needed)
    "noEmitOnError": true                         // Prevent build if errors exist
  },
  "include": ["app/*/"],                       // Compile only your app folder
  "exclude": ["node_modules", "dist", "*/.test.ts"] // Skip tests & dist
}